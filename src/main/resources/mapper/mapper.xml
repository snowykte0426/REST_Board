<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.riotdo.REST_Board.mapper.BoardMapper">
    <select id="selectBoardList" resultType="com.example.riotdo.REST_Board.dto.BoardDto">
        <![CDATA[
        SELECT board_idx,
               title,
               hit_cnt,
               created_datetime
        FROM rest_board
        WHERE deleted_yn = 'N'
        ORDER BY board_idx DESC
        ]]>
    </select>
</mapper>